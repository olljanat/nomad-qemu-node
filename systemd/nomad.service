[Unit]
Description=Nomad
Documentation=https://developer.hashicorp.com/nomad/docs
Requires=data.mount
After=data.mount

[Service]
User=root
Group=root

Type=notify
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/usr/bin/nomad agent -config /data/config
KillMode=process
KillSignal=SIGINT
LimitNOFILE=65536
LimitNPROC=infinity
Restart=on-failure
RestartSec=2
TasksMax=infinity
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target
